<% @title = @goal.title %>
<% user = @goal.user %>

<h1><%= @goal.title %></h1>
<%= link_to user.username, user_url(user) %>

<table>
    <tbody>
        <tr>
            <th>Created On:</th>
            <td><%= @goal.created_at %></td>
        </tr>
        <tr>
            <th>Cheers Received:</th>
            <td>
                <%= @goal.cheers %>
                <% unless current_user.id == @goal.user_id %>
                    <%= button_to 'Cheer', cheer_goal_url(@goal) %>
                <% end %>
            </td>
        </tr>
        <tr>
            <th>Status:</th>
            <td><%= @goal.completed ? "Complete" : "In Progress" %></td>
        </tr>
        <tr>
            <th>Visibility:</th>
            <td><%= @goal.private ? "Private" : "Public" %></td>
        </tr>
        <tr>
            <th>Description:</th>
            <td><%= @goal.body %></td>
        </tr>
    </tbody>
</table>

<% if current_user.id == @goal.user_id %>
    <div>
        <%= link_to "Edit Goal", edit_goal_url(@goal) %>
    </div>
<% end %>
